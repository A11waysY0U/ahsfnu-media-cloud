<Window x:Class="MediaCloudDesktop.Views.WorkflowEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑工作流" Height="400" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="工作流信息" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="名称" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="描述" FontWeight="Bold"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="类型" FontWeight="Bold"/>
            <TextBox x:Name="TypeTextBox" Margin="0,0,0,10" Text="custom"/>
            <TextBlock Text="颜色" FontWeight="Bold"/>
            <TextBox x:Name="ColorTextBox" Margin="0,0,0,10" Text="#409EFF"/>
            <CheckBox x:Name="IsActiveCheckBox" Content="激活" IsChecked="True" Margin="0,0,0,10"/>
            <Button x:Name="SaveButton" Content="保存" Style="{StaticResource ModernButton}" Margin="0,10,0,0" Click="SaveButton_Click"/>
            <Button Content="取消" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="#606266" Margin="0,10,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
