<Window x:Class="MediaCloudDesktop.Views.MaterialEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑素材" Height="380" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="编辑素材" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" >
            <TextBlock Text="文件名" Margin="0,0,0,6"/>
            <TextBox x:Name="NameTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

            <TextBlock Text="工作流" Margin="0,0,0,6"/>
            <ComboBox x:Name="WorkflowComboBox" Margin="0,0,0,12">
                <ComboBoxItem Content="不更改" Tag="__keep__" IsSelected="True"/>
                <ComboBoxItem Content="清除" Tag="__clear__"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <CheckBox x:Name="IsStarredCheckBox" Content="星标" Margin="0,0,16,0"/>
                <CheckBox x:Name="IsPublicCheckBox" Content="公开"/>
            </StackPanel>

            <TextBlock Text="标签" Margin="0,0,0,6"/>
            <ListBox x:Name="TagsListBox" SelectionMode="Multiple" Height="140"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="保存" Style="{StaticResource ModernButton}" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="取消" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="#606266" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>


