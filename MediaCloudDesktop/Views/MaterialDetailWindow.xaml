<Window x:Class="MediaCloudDesktop.Views.MaterialDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="素材详情" Height="500" Width="700" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F5F7FA" CornerRadius="6" Padding="6" Margin="0,0,16,0">
            <Image x:Name="ThumbnailImage" Stretch="Uniform"/>
        </Border>

        <StackPanel Grid.Column="1" >
            <TextBlock x:Name="NameText" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="TypeText" Margin="0,0,0,6"/>
            <TextBlock x:Name="SizeText" Margin="0,0,0,6"/>
            <TextBlock x:Name="ResolutionText" Margin="0,0,0,6"/>
            <TextBlock x:Name="DurationText" Margin="0,0,0,6"/>
            <TextBlock x:Name="UploaderText" Margin="0,0,0,6"/>
            <TextBlock x:Name="UploadTimeText" Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="复制链接" Style="{StaticResource ModernButton}" Click="CopyLink_Click" Margin="0,0,10,0"/>
                <Button Content="关闭" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="#606266" Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>


