<Window x:Class="MediaCloudDesktop.Views.WorkflowDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="工作流详情" Height="400" Width="600" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="工作流详情" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="{Binding Description}" Margin="0,10,0,0"/>
            <TextBlock Text="类型：" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Type}"/>
            <TextBlock Text="状态：" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Status}"/>
            <TextBlock Text="成员：" FontWeight="Bold" Margin="0,10,0,0"/>
            <ItemsControl ItemsSource="{Binding Members}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding User.Username}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="关闭" Style="{StaticResource ModernButton}" Margin="0,20,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
