<Window x:Class="MediaCloudDesktop.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="注册新账户" Height="600" Width="450" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="#F5F7FA">
        <Border Background="White" 
                CornerRadius="8" 
                Width="400" 
                Height="550"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Gray" 
                                Direction="270" 
                                ShadowDepth="5" 
                                BlurRadius="10" 
                                Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel Margin="40" VerticalAlignment="Center">
                
                <TextBlock Text="用户名" 
                         FontSize="14" 
                         Margin="0,0,0,8"
                         Foreground="#606266"/>
                <TextBox x:Name="UsernameTextBox" 
                       Style="{StaticResource ModernTextBox}"
                       Margin="0,0,0,20"/>
                
                <TextBlock Text="邮箱" 
                         FontSize="14" 
                         Margin="0,0,0,8"
                         Foreground="#606266"/>
                <TextBox x:Name="EmailTextBox" 
                       Style="{StaticResource ModernTextBox}"
                       Margin="0,0,0,20"/>
                
                <TextBlock Text="密码" 
                         FontSize="14" 
                         Margin="0,0,0,8"
                         Foreground="#606266"/>
                <PasswordBox x:Name="PasswordBox" 
                           Style="{StaticResource ModernPasswordBox}"
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="确认密码" 
                         FontSize="14" 
                         Margin="0,0,0,8"
                         Foreground="#606266"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                           Style="{StaticResource ModernPasswordBox}"
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="邀请码" 
                         FontSize="14" 
                         Margin="0,0,0,8"
                         Foreground="#606266"/>
                <TextBox x:Name="InviteCodeTextBox" 
                       Style="{StaticResource ModernTextBox}"
                       Margin="0,0,0,20"/>
                
                <TextBlock Text="验证码" 
                         FontSize="14" 
                         Margin="0,0,0,8"
                         Foreground="#606266"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="CaptchaTextBox" 
                           Style="{StaticResource ModernTextBox}"
                           Grid.Column="0"
                           Margin="0,0,10,0"/>
                    <Image x:Name="CaptchaImage" 
                         Grid.Column="1" 
                         Stretch="Uniform"
                         MouseLeftButtonDown="CaptchaImage_MouseLeftButtonDown"
                         Cursor="Hand"/>
                </Grid>
                
                <Button x:Name="RegisterButton" 
                      Content="注册" 
                      Style="{StaticResource ModernButton}"
                      Click="RegisterButton_Click"
                      Margin="0,0,0,15"/>
                
                <Button x:Name="CancelButton" 
                      Content="取消" 
                      Style="{StaticResource ModernButton}"
                      Background="Transparent"
                      Foreground="#606266"
                      Click="CancelButton_Click"/>
                
                <TextBlock x:Name="StatusTextBlock" 
                         Text="" 
                         Foreground="Red" 
                         HorizontalAlignment="Center" 
                         Margin="0,10,0,0"
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
